<Page
    x:Class="VolunteerApp.Questions"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VolunteerApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock x:Name="textBlock" Margin="0,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="60" FontSize="26.667"/>
        <Image x:Name="image" Height="448" Margin="0,75,0,0" VerticalAlignment="Top"/>
        <HyperlinkButton x:Name="similarQuestion" Content="相似的问题" HorizontalAlignment="Stretch" Margin="43,595,236,0" VerticalAlignment="Top" FontSize="24" Click="similarQuestion_Click" RenderTransformOrigin="-0.316,0.427"/>
        <HyperlinkButton x:Name="doItAgain" Content="重做" HorizontalAlignment="Stretch" Margin="284,596,68,0" VerticalAlignment="Top" FontSize="24" RenderTransformOrigin="0.938,1.795" Click="doItAgain_Click"/>

    </Grid>
</Page>
